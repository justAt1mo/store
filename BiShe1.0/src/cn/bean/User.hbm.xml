<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="cn.bean">
	<class name="User">  
        <id name="id">  
            <generator class="foreign">
            	<param name="property">login</param>
            </generator>  
        </id> 
        <one-to-one name="login" constrained="true"></one-to-one>
        <property name="name"/>  
        <property name="age"/>
        <property name="address"/>
        <property name="bednum"/>
        <property name="fNamef"/>
        <property name="fNames"/>
        <property name="fNamefnum"/>
        <property name="fNamesnum"/>
    </class>
</hibernate-mapping>